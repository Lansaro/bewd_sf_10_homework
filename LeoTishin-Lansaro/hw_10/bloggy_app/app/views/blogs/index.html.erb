<div class="col-xs-32">
<div class="table-responsive">
  <h1 style="#color:#666666;"> Our little bloggies </h1>
  <table class="table table-hover">
    <tr class="small">
      <th> Title </th>
      <th> Body </th>
      <th> Author </th>
      <th> </th>
    </tr>

    <%@blogs.each do |blog| %>
    <tr>
      <td> <%=blog.title %> </td>
      <td> <%=blog.body %> </td>
      <td> <%=blog.author %> </td>
      <td>
        <%=link_to 'Show', blog_path(blog), class: 'btn btn-default btn-xs' %>
        <%=link_to 'Edit', edit_blog_path(blog), class: 'btn btn-success btn-xs' %>
        <%=link_to 'Delete', blog, method: :delete, data: {confirm: "You sure?"}, class: 'btn btn-danger btn-xs' %>
      </td>
    </tr>
    <% end %>

  </table>
</div>
</div>

<div>
  <%= link_to "Add New Blog", new_blog_path, class: 'btn btn-lg btn-primary' %>
</div>

